<% if (results && results.data && results.data.event && results.data.events ) { %>
<div class="topnav">
    <div class="dropdown">
        <button class="dropbtn"><%= results.data.event.sport_name %></button>
        <div class="dropdown-content">
            <a href="/teams/1/11?orderBy='points DESC'">跑步</a>
            <a href="/teams/2/21?orderBy='points DESC'">高尔夫球</a>
            <a href="/teams/3/31?orderBy='points DESC'">羽毛球</a>
            <a href="/teams/4/41?orderBy='points DESC'">网球</a>
            <a href="/teams/5/51?orderBy='points DESC'">乒乓球</a>
        </div>
    </div>
    <% results.data.events.forEach(e => { %>
        <a href="/teams/<%= e.sport_id %>/<%= e.id %>?orderBy='points DESC'"><%= e.cname %></a>
    <% }); %>
</div>
<% }; %>